{
    "manifest_version": 3,
    "name": "Trandelion checker",
    "version": "1.0",
    "description": "Checks if Trandelion in running",
    "permissions": [
        "storage",
        "alarms",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "optional_host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://trandelion.com/*"
            ],
            "js": [
                "content_script.js"
            ]
        }
    ]
}